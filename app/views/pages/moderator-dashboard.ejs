<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/styles/styles.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row">

            <nav class="col-md-3 col-lg-2 d-md-block sidebar collapse">
    <div class="position-sticky pt-3">
        <div class="text-center mb-4">
            <h4 class="text-white">
                <i class="fas fa-user-shield me-2"></i>Moderator Panel
            </h4>
        </div>
        <ul class="nav flex-column">
            <% if (user.roles && user.roles.includes('ROLE_ADMIN')) { %>
                <li class="nav-item">
                    <a class="nav-link active" href="/admin-dashboard">
                        <i class="fas fa-images me-2"></i>Gestión de Users
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/visit-report">
                        <i class="fas fa-chart-bar me-2"></i>Reporte de Visitas
                    </a>
                </li>
            <% } else if ((user.roles && user.roles.includes('ROLE_MODERATOR')) || (user.roles && user.roles.includes('ROLE_ADMIN'))) { %>
                <li class="nav-item">
                    <a class="nav-link active" href="/admin-dashboard">
                        <i class="fas fa-images me-2"></i>Gestión de Banners
                    </a>
                </li>
            <% } else if ((user.roles && user.roles.includes('ROLE_USER')) || (user.roles && user.roles.includes('ROLE_MODERATOR')) || (user.roles && user.roles.includes('ROLE_ADMIN'))) { %>
                <li class="nav-item">
                    <a class="nav-link" href="/profile">
                        <i class="fas fa-user me-2"></i>Mi Perfil
                    </a>
                </li>
            <% } %>
            
            <li class="nav-item">
                <a class="nav-link" href="/">
                    <i class="fas fa-home me-2"></i>Inicio
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/logout" onclick="return confirm('¿Cerrar sesión?')">
                    <i class="fas fa-sign-out-alt me-2"></i>Cerrar Sesión
                </a>
            </li>
        </ul>
    </div>
</nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">
                        <i class="fas fa-images me-2"></i>Gestión de Banners
                    </h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <span class="btn btn-outline-secondary">
                            <i class="fas fa-user me-1"></i><%= user.username %>
                        </span>
                    </div>
                </div>

                <!-- Mensajes -->
                <% if (typeof message !== 'undefined' && message) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i><%= message %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>
                
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i><%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <!-- Formulario para subir banner -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-upload me-2"></i>Subir Nuevo Banner
                        </h5>
                    </div>
                    <div class="card-body">
                        <form action="/upload-banner" method="POST" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Título del Banner *</label>
                                        <input type="text" class="form-control" name="title" required>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Descripción</label>
                                        <textarea class="form-control" name="description" rows="3" placeholder="Descripción del banner..."></textarea>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Enlace (opcional)</label>
                                        <input type="url" class="form-control" name="link" placeholder="https://...">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Imagen del Banner *</label>
                                        <input type="file" class="form-control" name="bannerImage" accept="image/*" required>
                                        <div class="form-text">Formatos: JPG, PNG, GIF. Máx: 5MB</div>
                                    </div>
                                    <div class="mb-3">
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" name="isActive" id="isActive" checked>
                                            <label class="form-check-label" for="isActive">Banner activo</label>
                                        </div>
                                    </div>
                                    <div class="alert alert-info">
                                        <small>
                                            <i class="fas fa-info-circle me-1"></i>
                                            El banner se mostrará en la página principal si está activo.
                                        </small>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-upload me-2"></i>Subir Banner
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Lista de banners -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-list me-2"></i>Banners Existentes
                            <span class="badge bg-secondary ms-2"><%= banners.length %></span>
                        </h5>
                    </div>
                    <div class="card-body">
                        <% if (banners.length > 0) { %>
                            <div class="row">
                                <% banners.forEach(banner => { %>
                                    <div class="col-md-6 col-lg-4 mb-4">
                                        <div class="card banner-card <%= !banner.estado ? 'inactive-banner' : '' %>" data-banner-id="<%= banner.idBanner %>">
                                            <!-- Lado frontal (vista normal) -->
                                            <div class="banner-front">
                                                <img src="/banners/<%= banner.Imagen %>" 
                                                     class="card-img-top banner-preview" 
                                                     alt="<%= banner.Titulo %>"
                                                     onerror="this.src='https://via.placeholder.com/400x200?text=Imagen+no+disponible'">
                                                <div class="card-body">
                                                    <h6 class="card-title"><%= banner.Titulo %></h6>
                                                    <% if (banner.Descripción) { %>
                                                        <p class="card-text small text-muted"><%= banner.Descripción %></p>
                                                    <% } %>
                                                    <% if (banner.Enlace) { %>
                                                        <p class="small">
                                                            <i class="fas fa-link me-1"></i>
                                                            <a href="<%= banner.Enlace %>" target="_blank" class="text-decoration-none">Enlace</a>
                                                        </p>
                                                    <% } %>
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <div>
                                                            <small class="text-muted d-block">
                                                                ID: #<%= banner.idBanner %>
                                                            </small>
                                                            <small class="text-muted">
                                                                Por: <strong><%= banner.user.username %></strong>
                                                            </small>
                                                        </div>
                                                        <span class="badge <%= banner.estado ? 'bg-success' : 'bg-secondary' %>">
                                                            <i class="fas <%= banner.estado ? 'fa-eye' : 'fa-eye-slash' %> me-1"></i>
                                                            <%= banner.estado ? 'Activo' : 'Inactivo' %>
                                                        </span>
                                                    </div>
                                                </div>
                                                <div class="card-footer">
                                                    <div class="btn-group w-100">
                                                        <a href="/toggle-banner/<%= banner.idBanner %>" 
                                                           class="btn btn-sm <%= banner.estado ? 'btn-warning' : 'btn-success' %>"
                                                           title="<%= banner.estado ? 'Desactivar' : 'Activar' %>">
                                                            <i class="fas <%= banner.estado ? 'fa-eye-slash' : 'fa-eye' %>"></i>
                                                        </a>

                                                        <button class="btn btn-sm btn-info edit-banner-btn" 
                                                                title="Editar">
                                                            <i class="fas fa-edit"></i>
                                                        </button>

                                                        <a href="/delete-banner/<%= banner.idBanner %>" 
                                                           class="btn btn-sm btn-danger"
                                                           onclick="return confirm('¿Estás seguro de eliminar el banner?')"
                                                           title="Eliminar">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                            
                                            <!-- Lado trasero (formulario de edición) -->
                                            <div class="banner-back">
                                                <div class="card-body">
                                                    <h6 class="card-title mb-3">Editar Banner</h6>
                                                    <form class="edit-banner-form" action="/update-banner/<%= banner.idBanner %>" method="POST">
                                                        <div class="mb-3">
                                                            <label class="form-label">Título</label>
                                                            <input type="text" class="form-control" name="titulo" value="<%= banner.Titulo %>" required>
                                                        </div>
                                                        <div class="mb-3">
                                                            <label class="form-label">Descripción</label>
                                                            <textarea class="form-control" name="descripcion" rows="3"><%= banner.Descripción %></textarea>
                                                        </div>
                                                        <div class="btn-group w-100">
                                                            <button type="submit" class="btn btn-sm btn-success">
                                                                <i class="fas fa-save me-1"></i>Guardar
                                                            </button>
                                                            <button type="button" class="btn btn-sm btn-secondary cancel-edit">
                                                                <i class="fas fa-times me-1"></i>Cancelar
                                                            </button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        <% } else { %>
                            <div class="text-center py-5">
                                <i class="fas fa-images fa-4x text-muted mb-3"></i>
                                <h4 class="text-muted">No hay banners subidos</h4>
                                <p class="text-muted">Comienza subiendo tu primer banner usando el formulario superior.</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);

        // Funcionalidad de flip para edición
        document.addEventListener('click', function(e) {
            const card = e.target.closest('.banner-card');
            
            if (e.target.closest('.edit-banner-btn')) {
                card.classList.add('flipped');
            }
            
            if (e.target.closest('.cancel-edit')) {
                card.classList.remove('flipped');
            }
        });
    </script>
</body>
</html>