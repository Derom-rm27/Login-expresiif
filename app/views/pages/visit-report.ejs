<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="/styles/styles.css" class="">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Calidad de Software</a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/admin-dashboard">
                    <i class="fas fa-arrow-left me-1"></i>Volver al Dashboard
                </a>
                <a class="nav-link" href="/logout">Cerrar Sesión</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h2 class="mb-4"><i class="fas fa-chart-bar me-2"></i>Reporte de Visitas del Sitio</h2>

        <!-- Estadísticas generales -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card stat-card text-white bg-primary">
                    <div class="card-body text-center">
                        <h5 class="card-title">Visitas Totales</h5>
                        <h2 class="card-text"><%= totalVisits %></h2>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card stat-card text-white bg-success">
                    <div class="card-body text-center">
                        <h5 class="card-title">Visitas (24h)</h5>
                        <h2 class="card-text"><%= todayVisits %></h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- IPs más activas -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h6 class="mb-0"><i class="fas fa-desktop me-2"></i>IPs Más Activas</h6>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-sm table-striped mb-0">
                            <thead>
                                <tr>
                                    <th>IP</th>
                                    <th>Visitas</th>
                                    <th>Última Visita</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% visitsByIP.forEach(visit => { %>
                                <tr>
                                    <td><small><%= visit.ip_address %></small></td>
                                    <td><span class="badge bg-primary"><%= visit.dataValues.visit_count %></span></td>
                                    <td><small><%= new Date(visit.dataValues.last_visit).toLocaleDateString() %></small></td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Sistemas Operativos -->
            <div class="col-md-3 mb-4">
                <div class="card">
                    <div class="card-header bg-warning text-dark">
                        <h6 class="mb-0"><i class="fas fa-laptop me-2"></i>Sistemas Operativos</h6>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-sm table-striped mb-0">
                            <tbody>
                                <% statsByOS.forEach(os => { %>
                                <tr>
                                    <td><%= os.operating_system %></td>
                                    <td><span class="badge bg-warning"><%= os.dataValues.count %></span></td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Navegadores -->
            <div class="col-md-3 mb-4">
                <div class="card">
                    <div class="card-header bg-secondary text-white">
                        <h6 class="mb-0"><i class="fas fa-globe me-2"></i>Navegadores</h6>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-sm table-striped mb-0">
                            <tbody>
                                <% statsByBrowser.forEach(browser => { %>
                                <tr>
                                    <td><%= browser.browser %></td>
                                    <td><span class="badge bg-secondary"><%= browser.dataValues.count %></span></td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <a href="/admin-dashboard" class="btn btn-primary">
                <i class="fas fa-arrow-left me-2"></i>Volver al Dashboard
            </a>
            <button class="btn btn-success" onclick="window.location.reload()">
                <i class="fas fa-sync-alt me-2"></i>Actualizar
            </button>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>